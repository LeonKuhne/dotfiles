# reload
cmd + shift - c : brew services restart skhd && brew services restart yabai

# dmenu
cmd - d : dmenu-mac

# fullscreen
cmd + shift - f : yabai -m window --toggle zoom-fullscreen

# open terminal
cmd - return : open -na /Applications/kitty.app --args -1 -o font_size=22.0

## WINDOW NAV
# focus 
cmd - up : yabai -m window --focus north 
cmd - down : yabai -m window --focus south
cmd - right : yabai -m window --focus east
cmd - left : yabai -m window --focus west
# move
cmd + shift - up : yabai -m window --wark north 
cmd + shift - down : yabai -m window --warp south
cmd + shift - right : yabai -m window --warp east
cmd + shift - left : yabai -m window --warp west
# close
cmd - w : yabai -m window --close && yabai -m window --focus recent

# disable keyboard
# Create a variable to keep track of the keyboard state
var keyboard_enabled=1

# Disable keyboard bind
alt + cmd + d 
	# Check if the keyboard is enabled or not
	if $keyboard_enabled; then
		# If the keyboard is enabled, disable it
		shell "hidutil property --set '{"UserKeyMapping":[{"HIDKeyboardModifierMappingSrc":0x700000039,"HIDKeyboardModifierMappingDst":0x70000003A}]}'"
		set keyboard_enabled 0
	else
		# If the keyboard is disabled, enable it
		shell "hidutil property --set '{"UserKeyMapping":[{"HIDKeyboardModifierMappingSrc":0x70000003A,"HIDKeyboardModifierMappingDst":0x700000039}]}'"
		set keyboard_enabled 1
	end
