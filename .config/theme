#!/bin/sh
function colors() {
  for x in {0..8}; do
    for i in {30..37}; do
      for a in {40..47}; do
        echo -ne "\e[$x;$i;$a""m\\\e[$x;$i;$a""m\e[0;37;40m ";
      done;
      echo;
    done;
  done;
}


# custom shell agnostic color aliases
# copied from linux kernal log levels
export C_DEBUG="\e[0;34;40m"
export C_INFO=
export C_NOTICE=
export C_WARN=
export C_ERR=
export C_CRIT=
export C_ALERT=
export C_EMERG=
